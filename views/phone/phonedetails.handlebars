

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" /><ul class="list-inline rating-list">
  <li><i class="fa fa-star gray" id="star1"></i></li>
  <li><i class="fa fa-star gray" id="star2"></i></li>
  <li><i class="fa fa-star gray" id="star3"></i></li>
  <li><i class="fa fa-star gray" id="star4"></i></li>
  <li><i class="fa fa-star gray" id="star5"></i></li>
</ul>
<script src="../../public/js/stars.js"></script>
<P>Help other users! Double click on a star to rate</P>
<p>{{rating}}/5 stars</p>
<div class="card">
    <div class="table-title">
        <h1>{{brand.device}}</h1>
        <span class="back"><a href="/search" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Back</a></span>
    </div>
        
    <table class="table table-bordered success">
        <thead>
            <tr>
                <th>Image</th>
                <td><img src="{{brand.image}}" alt="{{brand.device}}"></td>
            </tr>
            <tr>
                <th>Device</th>
                <td>{{brand.device}}</td>
            </tr>
            <tr>
                <th class="info">Technology</th>
                <td>{{brand.Technology}}</td>
            </tr>
            <tr>
                <th class="info">Speed</th>
                <td>{{brand.Speed}}</td>
            </tr>
            <tr>
                <th class="info">Announced</th>
                <td>{{brand.Announced}}</td>
            </tr>
            <tr>
                <th class="info">Weight:</th>
                <td>{{brand.Weight}}</td>
            </tr>
            <tr>
                <th class="info">OS</th>
                <td>{{brand.OS}}</td>
            </tr>
            <tr>
                <th class="info">Processor</th>
                <td>{{brand.Chipset}}</td>
            </tr>
            <tr>
                <th class="info">Memory</th>
                <td>{{brand.Internal}}</td>
            </tr>
            <tr>
                <th class="info">Display Size</th>
                <td>{{brand.Size}}</td>
            </tr>
            <tr>
                <th class="info">Display Type</th>
                <td>{{brand.Type}}</td>
            </tr>
            <tr>
                <th class="info">Buy</th>
                <td>
                    <a href="https://www.amazon.com/s?k={{deviceName}}&ref=is_s" class="btn btn-secondary btn-lg active buy-button" role="button" aria-pressed="true">Buy</a>
                </td>
            </tr>
            <tr>
                <th class="info video">Device video</th>
                <td>
                    <iframe width="620" height="350" src="https://www.youtube.com/embed?listType=search&list={{deviceName}}">
                    </iframe>
                </td>
            </tr>
        </thead>
    </table>
    <br>
</div>
<a class = "reviewbtn" href="../reviews">Reviews</a>
            <div class="new-post">
		<h2 id="favoriteIcon" class="bad-button-thats-not-a-button" onclick="newComment('{{brand._id}}')">New</h2>
    </div>

<hr>
<div id="postParent">
	{{#each posts}}
		<div class="post">
			<div>
				<h2 style="display: inline-block;"> {{this.device_name}} </h2>
				<i class="material-icons" onclick="removePost('{{this.name}}','{{../username}}','{{this._id}}')">clear</i>
			</div>
			<h3 class="post-author">Author: {{this.author}} </h3>
			<p>{{this.comment}}</p>
			<hr>
		</div>
	{{else}}
		<div class="post">
			<h2>Currently no comments</h2>
		</div>
	
	{{/each}}
</div>

<script src="/public/js/comment.js"></script>
