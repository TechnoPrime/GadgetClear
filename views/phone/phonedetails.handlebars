<div class="card">
    <div class="table-title">
        <h1>{{brand.device}}</h1>
        <span class="back"><a href="/search" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Back</a></span>
    </div>
        
    <table class="table table-bordered success">
        <thead>
            <tr>
                <th>Image</th>
                <td><img src="{{brand.image}}" alt="{{brand.device}}"></td>
            </tr>
            <tr>
                <th>Device</th>
                <td>{{brand.device}}</td>
            </tr>
            <tr>
                <th class="info">Technology</th>
                <td>{{brand.Technology}}</td>
            </tr>
            <tr>
                <th class="info">Speed</th>
                <td>{{brand.Speed}}</td>
            </tr>
            <tr>
                <th class="info">Announced</th>
                <td>{{brand.Announced}}</td>
            </tr>
            <tr>
                <th class="info">Weight:</th>
                <td>{{brand.Weight}}</td>
            </tr>
            <tr>
                <th class="info">OS</th>
                <td>{{brand.OS}}</td>
            </tr>
            <tr>
                <th class="info">Processor</th>
                <td>{{brand.Chipset}}</td>
            </tr>
            <tr>
                <th class="info" valign="top">Memory</th>
                <td>{{brand.Internal}}</td>
            </tr>
            <tr>
                <th class="info">Display Size</th>
                <td>{{brand.Size}}</td>
            </tr>
            <tr>
                <th class="info">Display Type</th>
                <td>{{brand.Type}}</td>
            </tr>
            <tr>
                <th class="info">Buy</th>
                <td>
                    <a href="https://www.amazon.com/s?k={{brand.device}}+name&ref=is_s" class="btn btn-secondary btn-lg active buy-button" role="button" aria-pressed="true">Buy</a>
                </td>
            </tr>
            <tr>
                <th class="info video">Device video</th>
                <td>
                    <iframe width="620" height="350" src="https://www.youtube.com/embed?listType=search&list={{brand.device}}">
                    </iframe>
                </td>
            </tr>
        </thead>
    </table>
    <br>
</div>
<a class = "reviewbtn" href="../reviews">Reviews</a>
            <div class="new-post">
		<h2 id="favoriteIcon" class="bad-button-thats-not-a-button" onclick="newComment('{{username}}')">New</h2>
    </div>

<hr>
<div id="postParent">
	{{#each posts}}
		<div class="post">
			<div>
				<h2 style="display: inline-block;"> {{this.device_name}} </h2>
				<i class="material-icons" onclick="removePost('{{this.name}}','{{../username}}','{{this._id}}')">clear</i>
			</div>
			<h3 class="post-author">Author: {{this.name}} </h3>
			<p>{{this.comment}}</p>
			<hr>
		</div>
	{{else}}
		<div class="post">
			<h2>Currently no comments</h2>
		</div>
	
	{{/each}}
</div>

<script src="/public/js/comment.js"></script>
