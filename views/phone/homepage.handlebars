<form method="post" action="/submit">
  <div class="row" style="margin-left:550px;">
    <div class="col-md-6">

      <div class="form-group">
           <label for="brand">Select Brand</label>
           <select class="form-control" id="brand" name="brand">
              <option value="">Select</option>
               <option value="Samsung">Samsung</option>
               <option value="Apple">Apple</option>
               <option value="Google">Google</option>
           </select>
       </div>

       <div class="form-group">
           <label for="display">Screen Size</label>
           <select class="form-control" id="display" name="display">
             <option value="">Select</option>
               <option value="6.1' - 7'">6.1' - 7'</option>
               <option value="5.1' - 6'" >5.1' - 6'</option>
               <option value="4.1' - 5'">4.1' - 5'</option>
           </select>
       </div>

       <div class="form-group">
           <label for="display">Storage</label>
           <select class="form-control" id="storage" name="storage">
             <option value="">Select</option>
               <option value="32">32</option>
               <option value="64" >64</option>
               <option value="128">128</option>
           </select>
       </div>

       <div class="form-group">
          <label for="processor">Select Processor</label>
          <select class="form-control" id="processor" name="processor">
            <option value="">Select</option>
              <option value="Samsung Exynos">Samsung Exynos</option>
              <option value="Qualcomm Snapdragon">Qualcomm Snapdragon</option>
              <option value="MediaTek">MediaTek</option>
              <option value="Apple Bionic">Apple Bionic</option>
          </select>
      </div>

    </div>
  </div>

  <center>
    <button type="submit" class="btn btn-primary">Submit</button>
  </center>
</form>
